{% extends 'base.html.twig' %}

{% block body %}

    <br><br>
    {{ form_start(form) }}
    {{ form_row(form.username, {'label': 'Nom','attr' : {'placeholder' : 'Nom d\'utilisateur'}}) }}
    {{ form_row(form.email, {'label': 'Email','attr' : {'placeholder' : 'Adresse e-mail'}}) }}
    {{ form_row(form.password, {'label': 'Mot de passe','attr' : {'placeholder' : 'Mot de passe'}}) }}
    {{ form_row(form.confirm_password, {'label': 'Confirmation ','attr' : {'placeholder' : 'Confirmation du mot de passe'}}) }}
    <button type="submit" class="btn btn-success">Inscription</button>
    {{ form_end(form) }}
{% endblock %}