{% extends 'base.html.twig' %}

{% block body %}

    <h2>Liste des utilisateurs</h2>
    <table class="table">
        <thead>
            <th>ID</th>
            <th>E-mail</th>
            <th>RÃ´les</th>
            <th>Actions</th>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td> {{ user.id }}</td>
                    <td> {{ user.email}}</td>
                    <td>
                        {% for role in user.roles %}
                           {% if role == "ROLE_USER"%}
                                Utilisateur
                            {% elseif role =="ROLE_EDITOR" %}
                                Editeur
                            {% elseif role =="ROLE_ADMIN" %}
                                Administrateur
                            {% endif %}
                        {% endfor %}
                    </td>
                    <td> <a href="{{ path("admin_modifier_utilisateur",{'id':user.id}) }}" class="btn btn-warning">Modifier</a></td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5"> Il n'y a pas d'utilisateur</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}